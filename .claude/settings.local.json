{
  "permissions": {
    "allow": [
      "Bash(npm install:*)",
      "Bash(yarn install)",
      "Bash(yarn nx build:*)",
      "Bash(yarn add:*)",
      "Bash(yarn nx run-many:*)",
      "Bash(yarn nx e2e:*)",
      "Bash(cat:*)",
      "Bash(yarn nx lint:*)",
      "Bash(yarn nx test:*)",
      "Bash(curl:*)",
      "Bash(grep:*)",
      "Bash(yarn migration:generate:*)",
      "Bash(yarn migration:run:*)",
      "Bash(yarn nx reset:*)"
    ]
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -NoProfile -Command \"\n  cd (git rev-parse --show-toplevel)\n  npx --no-install prettier --config .prettierrc --write \\\"**/*.{ts,tsx,js,json,md,css,scss,html,yml,yaml}\\\"\n\""
          }
        ]
      }
    ]
  }
}
